<Window x:Class="WinDiskUsageAnalyzer.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About Win Disk Usage Analyzer" Height="300" Width="400" ResizeMode="NoResize"
        FontSize="15">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="lblAbout" Margin="10,10,10,0.04"/>
        <Button Name="btnOk" Content="Ok" Click="BtnOk_Click" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="1" Width="100" Margin="270,0,0,0" />
    </Grid>
</Window>
